# Конфигурация агента транскрипции видео (MVP)

# Основные настройки
ENVIRONMENT=development
DEBUG=true
HOST=0.0.0.0
PORT=8000

# База данных (SQLite для MVP)
DATABASE_URL=sqlite:///./transcription.db

# Redis (для продакшн можно указать внешний сервер)
REDIS_URL=redis://localhost:6379/0

# Файловое хранилище
UPLOAD_DIR=./uploads
TEMP_DIR=./temp
MAX_FILE_SIZE=2048

# ML модели
WHISPER_MODEL=base
DEVICE=cpu
BATCH_SIZE=8

# Безопасность (измените в продакшн!)
SECRET_KEY=mvp-secret-key-change-in-production

# Логирование
LOG_LEVEL=INFO